---
const { date, title, url, loc } = Astro.props;
---

<div
	class={`w-full h-[25vh] md:h-[20rem] py-4 px-6 bg-[url('${url}')] bg-cover bg-right flex shrink-0 align-bottom`}
>
	<!-- <img class='overflow-clip object-cover w-full h-full' src={url} alt='' /> -->
	<div class='w-[64rem] mx-auto mt-auto hidden md:block'>
		<h3 class='text-white text-sm pb-1'>{date}</h3>
		<hr class='w-[60%]' />
		<h1 class='text-white text-4xl font-light py-3'>{title}</h1>
		<hr class='w-[60%]' />
		<h3 class='text-white font-extralight text-sm pt-1 pb-3'>{loc}</h3>
	</div>
</div>
<div class='md:max-w-5xl m-auto pt-8 px-6 md:hidden'>
	<div class='md:max-w-5xl m-auto'>
		<h3 class='text-black text-sm pb-1'>{date}</h3>
		<h1 class='text-black text-4xl font-light'>{title}</h1>
		<h3 class='text-black font-extralight text-sm pt-1 pb-3'>{loc}</h3>
	</div>
</div>
