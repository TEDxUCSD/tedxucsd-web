---
import Footer from "../components/Footer.astro";
import Head from "../components/Head.astro";
import Nav from "../components/Nav.astro";
export interface Props {
	title: string;
}
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang='en'>
	<head>
		<Head title={title} />
	</head>
	<body class='bg-white h-full'>
		<Nav />
		<slot />
		<Footer />
	</body>
</html>
